---
import type { MarkdownInstance } from "astro"; // Імпортуємо тип
import BaseLayout from "../layouts/BaseLayout.astro";

// Описуємо структуру вашого frontmatter (необов'язково, але корисно)
interface Frontmatter {
  title: string;
  description?: string;
}

// Вказуємо тип для glob
const allPosts = Object.values(
  import.meta.glob<MarkdownInstance<Frontmatter>>("./posts/*.md", {
    eager: true,
  }),
);

const pageTitle = "My Astro Learning Blog";
---

<BaseLayout pageTitle={pageTitle}>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          {/* Тепер post.url та post.frontmatter.title мають типи, і помилки немає! */}
          <a href={post.url}>{post.frontmatter.title}</a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
